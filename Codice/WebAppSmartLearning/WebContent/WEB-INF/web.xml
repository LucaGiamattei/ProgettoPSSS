<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>WebAppSmartLearning</display-name>
  <welcome-file-list>
    <welcome-file>html/indexSmartLearning.html</welcome-file>

  </welcome-file-list>
  
  <servlet>
  <description></description>
  <display-name>Registration</display-name>
  <servlet-name>RegistrationServlet</servlet-name>
  <servlet-class>webLayer.servlets.RegistrationServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>RegistrationServlet</servlet-name>
  <url-pattern>/Registration</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <description></description>
  <display-name>Login</display-name>
  <servlet-name>LoginServlet</servlet-name>
  <servlet-class>webLayer.servlets.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>LoginServlet</servlet-name>
  <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <description></description>
  <display-name>Search</display-name>
  <servlet-name>SearchServlet</servlet-name>
  <servlet-class>webLayer.servlets.SearchServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>SearchServlet</servlet-name>
  <url-pattern>/riservate/Search</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>webLayer.filters.AuthFilter</filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/riservate/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  
  
</web-app>